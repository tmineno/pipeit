{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pipit.dev/schema/canonical-benchmark.schema.json",
  "title": "Pipit Canonical Benchmark Result",
  "type": "object",
  "required": ["context", "benchmarks"],
  "properties": {
    "context": {
      "type": "object",
      "required": ["canonical_version", "source_kind", "suite"],
      "properties": {
        "canonical_version": {
          "type": "string"
        },
        "source_kind": {
          "type": "string"
        },
        "suite": {
          "type": "string"
        },
        "date": {
          "type": "string"
        },
        "source_input": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "benchmarks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "run_name", "cpu_time", "real_time", "time_unit", "iterations"],
        "properties": {
          "name": {
            "type": "string"
          },
          "run_name": {
            "type": "string"
          },
          "cpu_time": {
            "type": "number"
          },
          "real_time": {
            "type": "number"
          },
          "time_unit": {
            "type": "string"
          },
          "iterations": {
            "type": "number"
          },
          "suite": {
            "type": "string"
          },
          "scenario": {
            "type": "string"
          },
          "variant": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
