        if (unit.empty() || unit == "s") { *out = base; return true; }
        if (unit == "m") { *out = base * 60.0; return true; }
        return false;
    };

    for (int i = 1; i < argc; ++i) {
        std::string opt(argv[i]);
        if (opt == "--param") {
            if (i + 1 >= argc) {
                std::fprintf(stderr, "startup error: --param requires name=value\\n");
                return 2;
            }
            std::string arg(argv[++i]);
            auto eq = arg.find('=');
            if (eq == std::string::npos) {
                std::fprintf(stderr, "startup error: --param requires name=value\\n");
                return 2;
            }
            auto name = arg.substr(0, eq);
            auto val = arg.substr(eq + 1);
            if (name == "agc_gain") _param_agc_gain_write.store(std::stof(val), std::memory_order_release);
            else {
                std::fprintf(stderr, "startup error: unknown param '%s'\\n", name.c_str());
                return 2;
            }
            continue;
        }
        if (opt == "--duration") {
            if (i + 1 >= argc) {
                std::fprintf(stderr, "startup error: --duration requires a value\\n");
                return 2;
            }
            std::string d(argv[++i]);
            if (!_parse_duration(d, &_duration_seconds)) {
                std::fprintf(stderr, "startup error: invalid --duration '%s' (use <sec>, <sec>s, <min>m, or inf)\\n", d.c_str());
                return 2;
            }
            continue;
        }
        if (opt == "--threads") {
            if (i + 1 >= argc) {
                std::fprintf(stderr, "startup error: --threads requires a positive integer\\n");
                return 2;
            }
            try {
                _threads = std::stoi(std::string(argv[++i]));
            } catch (...) {
                std::fprintf(stderr, "startup error: --threads requires a positive integer\\n");
                return 2;
            }
            if (_threads <= 0) {
                std::fprintf(stderr, "startup error: --threads requires a positive integer\\n");
                return 2;
            }
            continue;
        }
        if (opt == "--probe") {
            if (i + 1 >= argc) {
                std::fprintf(stderr, "startup error: --probe requires a name\\n");
                return 2;
            }
            _enabled_probes.emplace_back(argv[++i]);
            continue;
        }
        if (opt == "--probe-output") {
            if (i + 1 >= argc) {
                std::fprintf(stderr, "startup error: --probe-output requires a path\\n");
                return 2;
            }
            _probe_output = std::string(argv[++i]);
            continue;
        }
        if (opt == "--stats") {
            _stats = true;
            continue;
        }
        std::fprintf(stderr, "startup error: unknown option '%s'\\n", argv[i]);
        return 2;
    }

    // Probe initialization
    #ifndef NDEBUG
    if (!_enabled_probes.empty() || _probe_output != "/dev/stderr") {
        std::unordered_set<std::string> _valid_probes = {"agc_out", "bp_out", "sync_probe", "data_probe"};
        for (const auto& name : _enabled_probes) {
            if (_valid_probes.find(name) == _valid_probes.end()) {
                std::fprintf(stderr, "startup error: unknown probe '%s'\\n", name.c_str());
                return 2;
            }
            if (name == "agc_out") _probe_agc_out_enabled = true;
            if (name == "bp_out") _probe_bp_out_enabled = true;
            if (name == "sync_probe") _probe_sync_probe_enabled = true;
            if (name == "data_probe") _probe_data_probe_enabled = true;
        }
        _probe_output_file = std::fopen(_probe_output.c_str(), "w");
        if (!_probe_output_file) {
                std::fprintf(stderr, "startup error: failed to open probe output file '%s': %s\\n",
                            _probe_output.c_str(), std::strerror(errno));
                return 2;
        }
    }
    #endif

    std::signal(SIGINT, [](int) { _stop.store(true, std::memory_order_release); });

    std::thread _t0(task_analysis);
    std::thread _t1(task_capture);
    std::thread _t2(task_monitor);
    _start.store(true, std::memory_order_release);

    if (std::isfinite(_duration_seconds)) {
        std::this_thread::sleep_for(std::chrono::duration<double>(_duration_seconds));
        _stop.store(true, std::memory_order_release);
    } else {
        // Run until SIGINT
        while (!_stop.load(std::memory_order_acquire))
            std::this_thread::sleep_for(std::chrono::milliseconds(100));
    }

    _t0.join();
    _t1.join();
    _t2.join();

    if (_threads > 0 && _threads < 3) {
        std::fprintf(stderr, "startup warning: --threads is advisory (requested=%d, tasks=3)\\n", _threads);
    }

    if (_stats) {
        fprintf(stderr, "[stats] task 'analysis': ticks=%lu, missed=%lu (drop), max_latency=%ldns, avg_latency=%ldns\n",
(unsigned long)_stats_analysis.ticks, (unsigned long)_stats_analysis.missed,
_stats_analysis.max_latency_ns, _stats_analysis.avg_latency_ns());
        fprintf(stderr, "[stats] task 'capture': ticks=%lu, missed=%lu (drop), max_latency=%ldns, avg_latency=%ldns\n",
(unsigned long)_stats_capture.ticks, (unsigned long)_stats_capture.missed,
_stats_capture.max_latency_ns, _stats_capture.avg_latency_ns());
        fprintf(stderr, "[stats] task 'monitor': ticks=%lu, missed=%lu (drop), max_latency=%ldns, avg_latency=%ldns\n",
(unsigned long)_stats_monitor.ticks, (unsigned long)_stats_monitor.missed,
_stats_monitor.max_latency_ns, _stats_monitor.avg_latency_ns());
        fprintf(stderr, "[stats] shared buffer 'ctl': %zu tokens (%zuB)\n",
(size_t)_ringbuf_ctl.available(), _ringbuf_ctl.available() * sizeof(int32_t));
        fprintf(stderr, "[stats] shared buffer 'data_buf': %zu tokens (%zuB)\n",
(size_t)_ringbuf_data_buf.available(), _ringbuf_data_buf.available() * sizeof(float));
        fprintf(stderr, "[stats] shared buffer 'filtered': %zu tokens (%zuB)\n",
(size_t)_ringbuf_filtered.available(), _ringbuf_filtered.available() * sizeof(float));
        fprintf(stderr, "[stats] shared buffer 'narrow': %zu tokens (%zuB)\n",
(size_t)_ringbuf_narrow.available(), _ringbuf_narrow.available() * sizeof(float));
        fprintf(stderr, "[stats] shared buffer 'sync_buf': %zu tokens (%zuB)\n",
(size_t)_ringbuf_sync_buf.available(), _ringbuf_sync_buf.available() * sizeof(float));
        fprintf(stderr, "[stats] shared buffer 'wideband': %zu tokens (%zuB)\n",
(size_t)_ringbuf_wideband.available(), _ringbuf_wideband.available() * sizeof(float));
        fprintf(stderr, "[stats] memory pool: %zuB allocated, %zuB used\n", (size_t)134217728, (size_t)6144);
    }
    return _exit_code.load(std::memory_order_acquire);
}
